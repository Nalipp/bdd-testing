<h1 class="text-center">Log in</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, :html => {class: "form-horizontal", role: "form"},
     url: new_session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="control-label col-md-5">
        <%= f.label :email %>
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-5">
        <%= f.label :password %>
      </div>
      <div class="col-md-7">
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-5 col-md-7">
        <h3><%= f.submit("Log in", class: "btn btn-primary btn-lg") %> [ <%= link_to "Sign up", new_user_registration_path %> ]
                                                                       [ <%= link_to "Cancel", articles_path %> ]</h3>
      </div>
    </div>
    <% end %>
  </div>
</div>
