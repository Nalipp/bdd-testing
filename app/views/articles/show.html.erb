<article class="detail-article">
  <h1 class="article-detail-title"><%= @article.title %>
    <%= link_to "edit", edit_article_path(@article), class: "btn btn-success btn-xs btn-padding"%>
    <%= link_to "delete", article_path(@article), method: :delete,
                          data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger btn-padding" %>
  </h1>
  <div class="glyphicon glyphicon-calendar" id="article-date">
    <%= @article.created_at.strftime("%b %d, %Y") %>
  </div>

    <div class="article-body">
      <%= @article.body %>
    </div>
</article>
